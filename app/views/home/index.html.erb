<body id="index_body">
    <%=image_tag("back.png", id:"back_img")%>
  <div class="go">
    <a href="main" ><%=image_tag("main_logo2.png", id:"index_logo", :onclick=>"stop()")%></a>
  </div>
    <%=video_tag("https://s3.ap-northeast-2.amazonaws.com/hirunning/%ED%95%98%EC%9D%B4%EB%9F%AC%EB%8B%9D-%ED%8B%B0%EC%A0%80.m4v",autobuffer: true, :loop => true, id:"video")%>
  <div class="index_content">
    <p>Click Logo!</p>
    <p>Go Running</p>
  </div>
</body>
<script>
$(document).ready(function(){
  $("#index_logo").hover(function(){
      $(this).attr("src", "../assets/main_logo.png");
    }, function(){
        $(this).attr("src", "../assets/main_logo2.png");
    });
});
setTimeout(function(){
    document.getElementById("video").play();
}, 1000);
function stop(){
    var vid = document.getElementById("video");
    vid.pause();
}
</script>
